<script>

    // Meganav
    window.addEventListener("resize", initMeganav);
    
    function initMeganav() {
        if (window.innerWidth < 1215 ) {
            document.getElementById('artists-heading').addEventListener('click', mnArtistShow);
            document.getElementById('management-heading').addEventListener('click', mnManagementShow);
            document.getElementById('promotion-heading').addEventListener('click', mnPromotionShow);
            document.getElementById('licensing-heading').addEventListener('click', mnLicensingShow);
            document.getElementById('artists-heading').removeEventListener('mouseover', mnArtistShow);
            document.getElementById('management-heading').removeEventListener('mouseover', mnManagementShow);
            document.getElementById('promotion-heading').removeEventListener('mouseover', mnPromotionShow);
            document.getElementById('artists-heading').removeEventListener('mouseout', mnArtistHide);
            document.getElementById('management-heading').removeEventListener('mouseout', mnManagementHide);
            document.getElementById('promotion-heading').removeEventListener('mouseout', mnPromotionHide);
        }    else {
            document.getElementById('artists-heading').addEventListener('mouseout', mnArtistHide);
            document.getElementById('management-heading').addEventListener('mouseout', mnManagementHide);
            document.getElementById('promotion-heading').addEventListener('mouseout', mnPromotionHide);
            document.getElementById('licensing-heading').addEventListener('mouseout', mnLicensingHide);
            document.getElementById('artists-heading').addEventListener('mouseover', mnArtistShow);
            document.getElementById('management-heading').addEventListener('mouseover', mnManagementShow);
            document.getElementById('promotion-heading').addEventListener('mouseover', mnPromotionShow);
            document.getElementById('licensing-heading').addEventListener('mouseover', mnLicensingShow);
        }
    }

    document.getElementById('mobile-meganav').addEventListener('click', showMobileMegaNav);
    document.getElementById('mobile-meganav-nav-exit').addEventListener('click', hideMobileMegaNav);

    function mnArtistShow() {
        groupActions('show', 'artists-group');
    }
    function mnArtistHide() {
        groupActions('hide', 'artists-group');
    }
    function mnManagementShow() {
        groupActions('show', 'management-group');
    }
    function mnManagementHide() {
        groupActions('hide', 'management-group');
    }
    function mnPromotionShow() {
        groupActions('show', 'promotion-group');
    }
    function mnPromotionHide() {
        groupActions('hide', 'promotion-group');
    }
    function mnLicensingShow() {
        groupActions('show', 'licensing-group');
    }
    function mnLicensingHide() {
        groupActions('hide', 'licensing-group');
    }
    
    groupOnly = document.getElementsByClassName('group');
    for (var i = 0; i < groupOnly.length; i++) {
        groupOnly[i].addEventListener('click', showMobileBack, false);
    }
    document.getElementById('mobile-meganav-nav-back').addEventListener('click', hideMobileBack);

    function showMobileMegaNav() {
        document.getElementById('megabar').classList.add('mobile');
        document.getElementById('meganav_cover').classList.add('show');
    }

    function hideMobileMegaNav() {
        document.getElementById('megabar').classList.remove('mobile');
        document.getElementById('mobile-meganav-nav-back').style.display = 'none';
        document.getElementById('meganav_cover').classList.remove('show');
        hideMobileBack();
    }

    function showMobileBack() {
        document.getElementById('mobile-meganav-nav-back').style.display = 'flex';
    }

    function hideMobileBack() {
        document.getElementById('mobile-meganav-nav-back').style.display = 'none';
        cl = document.getElementsByClassName('megagroup');
        for (var i = 0; i < cl.length; i++) {
            cl[i].style.display='none'
        }
        
    }

    function groupActions(action, id) {
        if (action == 'show') {
            document.getElementById(id).classList.add('show');
            document.getElementById(id).parentNode.style.display = 'block';
        } else if (action == 'hide') {
            document.getElementById(id).classList.remove('show');
            document.getElementById(id).parentNode.style.display = 'none';
        } else if (action == 'toggle') {
            if (document.getElementById(id).classList.contains('show')) {
                document.getElementById(id).classList.remove('show');
            } else {
                document.getElementById(id).classList.add('show');
            }
        }
    }

    function SSOSignups(type){
        if(type == 'facebook'){
            window.location = 'https://app.musicgateway.com/log-in?facebooklogin=true'
        }

        else if (type == 'spotify'){
            window.location = 'https://app.musicgateway.com/log-in?spotifylogin=true'
        }
    }

    initMeganav();


    //cobrand
    if (getCookie('phPseudoAffiliate') == 'songbay') {
        document.getElementById('cobrand-logo').style.backgroundImage = "url('/marketing-website/dist/img/pages/misc/songbay.png')";
        document.getElementById('cobrand-logo').style.display = "block";
    }
    if (getCookie('phPseudoAffiliate') == 'musiccrowns') {
        document.getElementById('cobrand-logo').style.backgroundImage = "url('/marketing-website/dist/img/pages/misc/musiccrowns.png')";
        document.getElementById('cobrand-logo').style.display = "block";
    }



    function handleCredentialResponse(response) {
    window.location.href = "https://app.musicgateway.com/log-in?googlesignup=" + response.credential;
  //console.log("Encoded JWT ID token: " + response.credential);
}
    window.addEventListener('load', function (){
        if(typeof google !== 'undefined'){
            google.accounts.id.initialize({
            client_id: "942407166572-925rilfvne9h01445ide95okbqprdrhd.apps.googleusercontent.com", // Replace with your Google Client ID
            callback: handleCredentialResponse // We choose to handle the callback in client side, so we include a reference to a function that will handle the response
            });
        }

    //google.accounts.id.prompt(); // Display the One Tap dialog
    })

</script>
